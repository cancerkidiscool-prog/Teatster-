                    library.flags[flag] = box.Text
                    callback(box.Text)
                end)
            end

            function sectionActions:Dropdown(text, flag, list, callback)
                local dropdown = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 50),
                    BackgroundTransparency = 1,
                    ZIndex = 7,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 20),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(210, 200, 230),
                    TextSize = 14,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 8,
                    Parent = dropdown
                })
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 24),
                    Position = UDim2.new(0, 0, 0, 22),
                    BackgroundColor3 = Color3.fromRGB(15, 8, 22),
                    BorderSizePixel = 0,
                    Text = "Select...",
                    TextColor3 = Color3.fromRGB(230, 220, 250),
                    TextSize = 14,
                    Font = Enum.Font.Code,
                    ZIndex = 8,
                    Parent = dropdown
                })
                utility.round(btn, UDim.new(0, 4))
                utility.stroke(btn, Color3.fromRGB(70, 30, 100), 1)

                local maxDropdownHeight = 200
                local contentHeight = #list * 24

                local listFrame = utility.create("ScrollingFrame", {
                    Size = UDim2.new(1, 0, 0, contentHeight),
                    Position = UDim2.new(0, 0, 1, 4),
                    BackgroundColor3 = Color3.fromRGB(18, 8, 26),
                    BorderSizePixel = 0,
                    Visible = false,
                    ZIndex = 11,
                    ScrollBarThickness = 4,
                    ScrollBarImageColor3 = Color3.fromRGB(80, 40, 110),
                    ScrollBarImageTransparency = 0.5,
                    CanvasSize = UDim2.new(1, 0, 0, contentHeight),
                    Parent = btn
                })
                utility.round(listFrame, UDim.new(0, 4))
                utility.stroke(listFrame, Color3.fromRGB(70, 30, 100), 1)
                utility.create("UIListLayout", {
                    Padding = UDim.new(0, 0),
                    Parent = listFrame
                })

                local opened = false
                btn.MouseButton1Click:Connect(function()
                    opened = not opened
                    listFrame.Visible = opened

                    if opened then
                        listFrame.Size = UDim2.new(1, 0, 0, math.min(contentHeight, maxDropdownHeight))
                        listFrame.CanvasSize = UDim2.new(1, 0, 0, contentHeight)
                        listFrame.CanvasPosition = Vector2.new(0, 0)
                    else
                        listFrame.Size = UDim2.new(1, 0, 0, 0)
                    end
                end)

                for _, v in next, list do
                    local item = utility.create("TextButton", {
                        Size = UDim2.new(1, 0, 0, 24),
                        BackgroundColor3 = Color3.fromRGB(18, 8, 26),
                        BorderSizePixel = 0,
                        Text = v,
                        TextColor3 = Color3.fromRGB(190, 180, 210),
                        TextSize = 14,
                        Font = Enum.Font.Code,
                        ZIndex = 12,
                        Parent = listFrame
                    })
                    
                    item.MouseButton1Click:Connect(function()
                        btn.Text = v
                        opened = false
                        listFrame.Visible = false
                        listFrame.Size = UDim2.new(1, 0, 0, 0)
                        library.flags[flag] = v
                        callback(v)
                    end)
                    
                    item.MouseEnter:Connect(function()
                        item.BackgroundColor3 = Color3.fromRGB(40, 20, 60)
                    end)
                    item.MouseLeave:Connect(function()
                        item.BackgroundColor3 = Color3.fromRGB(18, 8, 26)
                    end)
                end
            end

            function sectionActions:Slider(text, flag, min, max, default, callback)
                local slider = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 55),
                    BackgroundTransparency = 1,
                    ZIndex = 7,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 20),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(210, 200, 230),
                    TextSize = 14,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 8,
                    Parent = slider
                })
                local bg = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 20),
                    Position = UDim2.new(0, 0, 0, 25),
                    BackgroundColor3 = Color3.fromRGB(15, 8, 22),
                    BorderSizePixel = 0,
                    Text = "",
                    ZIndex = 8,
                    Parent = slider
                })
                utility.round(bg, UDim.new(0, 10))
                utility.stroke(bg, Color3.fromRGB(70, 30, 100), 1)

                local fill = utility.create("Frame", {
                    Size = UDim2.new((default - min) / (max - min), 0, 1, 0),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    ZIndex = 9,
                    Parent = bg
                })
                utility.round(fill, UDim.new(0, 10))
                
                -- SLIDER GRADIENT (Dark to Electric)
                local sliderGradient = utility.create("UIGradient", {
                    Rotation = 0,
                    Color = utility.gradient({Color3.fromRGB(90, 0, 140), Color3.fromRGB(230, 150, 255)}),
                    Parent = fill
                })

                -- The "Thumb" (The circle you drag)
                local thumb = utility.create("Frame", {
                    Size = UDim2.new(0, 14, 0, 14),
                    Position = UDim2.new((default - min) / (max - min), -7, 0.5, -7),
                    BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                    BorderSizePixel = 0,
                    ZIndex = 10,
                    Parent = bg
                })
                utility.round(thumb, UDim.new(0.5, 0)) -- Fully rounded
                utility.stroke(thumb, Color3.fromRGB(0,0,0), 0) -- Subtle shadow/outline

                local val = utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 1, 0),
                    BackgroundTransparency = 1,
                    Text = string.format("%.2f", default),
                    TextColor3 = Color3.fromRGB(255, 255, 255),
                    TextSize = 13,
                    Font = Enum.Font.Code,
                    ZIndex = 11,
                    TextStrokeTransparency = 0.7,
                    Parent = thumb
                })

                local function update(input)
                    local perc = math.clamp((input.Position.X - bg.AbsolutePosition.X) / bg.AbsoluteSize.X, 0, 1)
                    local rawValue = min + (max - min) * perc
                    local value = tonumber(string.format("%.2f", rawValue))
                    
                    utility.tween(fill, { 0.1 }, { Size = UDim2.new(perc, 0, 1, 0) })
                    utility.tween(thumb, { 0.1 }, { Position = UDim2.new(perc, -7, 0.5, -7) })
                    
                    val.Text = string.format("%.2f", value)
                    library.flags[flag] = value
                    callback(value)
                end

                local dragging = false
                bg.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                        dragging = true
                        update(input)
                    end
                end)
                services.UserInputService.InputChanged:Connect(function(input)
                    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
                        update(input)
                    end
                end)
                services.UserInputService.InputEnded:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then dragging = false end
                end)
            end

            function sectionActions:Button(text, callback)
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 34),
                    BackgroundColor3 = Color3.fromRGB(25, 10, 40),
                    BorderSizePixel = 0,
                    Text = text,
                    TextColor3 = Color3.fromRGB(230, 220, 250),
                    TextSize = 14,
                    Font = Enum.Font.Code,
                    ZIndex = 7,
                    Parent = items
                })
                utility.round(btn, UDim.new(0, 6))
                utility.stroke(btn, Color3.fromRGB(80, 30, 110), 1)

                -- Click Animation
                btn.MouseButton1Down:Connect(function()
                    utility.tween(btn, { 0.1 }, { Size = UDim2.new(1, 0, 0, 30), BackgroundColor3 = Color3.fromRGB(40, 20, 60) })
                end)
                btn.MouseButton1Up:Connect(function()
                    utility.tween(btn, { 0.1 }, { Size = UDim2.new(1, 0, 0, 34), BackgroundColor3 = Color3.fromRGB(25, 10, 40) })
                    callback()
                end)
                
                -- Hover Effect
                btn.MouseEnter:Connect(function()
                    utility.tween(btn, { 0.2 }, { BackgroundColor3 = Color3.fromRGB(35, 15, 55) })
                end)
                btn.MouseLeave:Connect(function()
                    utility.tween(btn, { 0.2 }, { BackgroundColor3 = Color3.fromRGB(25, 10, 40) })
                end)
            end

            return sectionActions
        end

        return tabActions
    end

    -- Global search logic
    searchBox:GetPropertyChangedSignal("Text"):Connect(function()
        local query = string.lower(searchBox.Text)

        if currentTab and currentTab.LeftCol and currentTab.RightCol then
            local cols = { currentTab.LeftCol, currentTab.RightCol }

            for _, col in ipairs(cols) do
                for _, child in ipairs(col:GetChildren()) do
                    if child.Name == "ZalSection" then
                        local title = child:FindFirstChildWhichIsA("TextLabel")
                        if title then
                            local match = (query == "") or string.find(string.lower(title.Text), query, 1, true)
                            child.Visible = match
                        end
                    end
                end

                col.CanvasPosition = Vector2.new(0, 0) 
            end

            task.delay(0.05, function()
                if currentTab.LeftCol then
                    local leftList = currentTab.LeftCol:FindFirstChild("UIListLayout")
                    if leftList then
                        currentTab.LeftCol.CanvasSize = UDim2.new(0, 0, 0, leftList.AbsoluteContentSize.Y + 20)
                    end
                end
                if currentTab.RightCol then
                    local rightList = currentTab.RightCol:FindFirstChild("UIListLayout")
                    if rightList then
                        currentTab.RightCol.CanvasSize = UDim2.new(0, 0, 0, rightList.AbsoluteContentSize.Y + 20)
                    end
                end
            end)
        end
    end)

    return windowActions
end

return library
