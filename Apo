                local toggle = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 32),
                    BackgroundTransparency = 1,
                    Text = "",
                    ZIndex = 6,
                    Parent = items
                })
                local box = utility.create("Frame", {
                    Size = UDim2.new(0, 20, 0, 20),
                    Position = UDim2.new(0, 0, 0.5, -10),
                    BackgroundColor3 = Color3.fromRGB(15, 15, 20),
                    BorderSizePixel = 0,
                    ZIndex = 7,
                    Parent = toggle
                })
                utility.round(box, 5)
                utility.stroke(box, Color3.fromRGB(60, 60, 60), 1)

                local fill = utility.create("Frame", {
                    Size = UDim2.new(1, -6, 1, -6),
                    Position = UDim2.new(0, 3, 0, 3),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    BackgroundTransparency = 1,
                    ZIndex = 8,
                    Parent = box
                })
                utility.round(fill, 3)

                utility.create("TextLabel", {
                    Size = UDim2.new(1, -35, 1, 0),
                    Position = UDim2.new(0, 32, 0, 0),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(220, 220, 220),
                    TextSize = 15,
                    Font = Enum.Font.Gotham,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 7,
                    Parent = toggle
                })

                local enabled = false
                toggle.MouseButton1Click:Connect(function()
                    enabled = not enabled
                    -- Scale animation for the tick
                    utility.tween(fill, {0.2}, {BackgroundTransparency = enabled and 0 or 1})
                    if enabled then
                         fill:TweenSize(UDim2.new(1, -2, 1, -2), "Out", "Elastic", 0.3)
                    else
                         fill:TweenSize(UDim2.new(1, -6, 1, -6), "In", "Quad", 0.2)
                    end
                    library.flags[flag] = enabled
                    callback(enabled)
                end)
            end

            function sectionActions:Textbox(text, flag, placeholder, callback)
                local textboxFrame = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 40),
                    BackgroundTransparency = 1,
                    ZIndex = 6,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 15),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 180, 180),
                    TextSize = 13,
                    Font = Enum.Font.GothamBold,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 7,
                    Parent = textboxFrame
                })
                local box = utility.create("TextBox", {
                    Size = UDim2.new(1, 0, 0, 24),
                    Position = UDim2.new(0, 0, 0, 18),
                    BackgroundColor3 = Color3.fromRGB(20, 20, 25),
                    BorderSizePixel = 0,
                    PlaceholderText = placeholder or "",
                    Text = "",
                    TextColor3 = Color3.fromRGB(255, 255, 255),
                    PlaceholderColor3 = Color3.fromRGB(100, 100, 100),
                    TextSize = 14,
                    Font = Enum.Font.Gotham,
                    ZIndex = 7,
                    Parent = textboxFrame
                })
                utility.round(box, 6)
                utility.stroke(box, Color3.fromRGB(50, 50, 60), 1)
                box.FocusLost:Connect(function()
                    library.flags[flag] = box.Text
                    callback(box.Text)
                end)
            end

            function sectionActions:Dropdown(text, flag, list, callback)
                local dropdown = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 40),
                    BackgroundTransparency = 1,
                    ZIndex = 6,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 15),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 180, 180),
                    TextSize = 13,
                    Font = Enum.Font.GothamBold,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 7,
                    Parent = dropdown
                })
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 24),
                    Position = UDim2.new(0, 0, 0, 18),
                    BackgroundColor3 = Color3.fromRGB(20, 20, 25),
                    BorderSizePixel = 0,
                    Text = "Select...",
                    TextColor3 = Color3.fromRGB(255, 255, 255),
                    TextSize = 14,
                    Font = Enum.Font.Gotham,
                    ZIndex = 7,
                    Parent = dropdown
                })
                utility.round(btn, 6)
                utility.stroke(btn, Color3.fromRGB(50, 50, 60), 1)

                local maxDropdownHeight = 200
                local contentHeight = #list * 26

                local listFrame = utility.create("ScrollingFrame", {
                    Size = UDim2.new(1, 0, 0, 0),
                    Position = UDim2.new(0, 0, 1, 4),
                    BackgroundColor3 = Color3.fromRGB(25, 25, 30),
                    BorderSizePixel = 0,
                    Visible = false,
                    ZIndex = 11,
                    ScrollBarThickness = 4,
                    ScrollBarImageColor3 = library.accent,
                    CanvasSize = UDim2.new(1, 0, 0, contentHeight),
                    Parent = btn
                })
                utility.round(listFrame, 6)
                utility.stroke(listFrame, Color3.fromRGB(60, 60, 70), 1)

                utility.create("UIListLayout", { Padding = UDim.new(0, 2), Parent = listFrame })

                local opened = false
                btn.MouseButton1Click:Connect(function()
                    opened = not opened
                    listFrame.Visible = opened

                    if opened then
                        listFrame:TweenSize(UDim2.new(1, 0, 0, math.min(contentHeight, maxDropdownHeight)), "Out", "Quart", 0.2)
                        listFrame.CanvasPosition = Vector2.new(0, 0)
                    else
                        listFrame:TweenSize(UDim2.new(1, 0, 0, 0), "In", "Quart", 0.2)
                    end
                end)

                for _, v in next, list do
                    local item = utility.create("TextButton", {
                        Size = UDim2.new(1, 0, 0, 26),
                        BackgroundColor3 = Color3.fromRGB(30, 30, 35),
                        BorderSizePixel = 0,
                        Text = "  "..v, -- Add padding visually
                        TextColor3 = Color3.fromRGB(200, 200, 200),
                        TextSize = 14,
                        Font = Enum.Font.Gotham,
                        TextXAlignment = Enum.TextXAlignment.Left,
                        ZIndex = 12,
                        Parent = listFrame
                    })
                    
                    -- Hover effect for dropdown items
                    item.MouseEnter:Connect(function()
                        utility.tween(item, {0.2}, {BackgroundColor3 = Color3.fromRGB(40, 40, 45)})
                    end)
                    item.MouseLeave:Connect(function()
                        utility.tween(item, {0.2}, {BackgroundColor3 = Color3.fromRGB(30, 30, 35)})
                    end)

                    item.MouseButton1Click:Connect(function()
                        btn.Text = v
                        opened = false
                        listFrame.Visible = false
                        listFrame.Size = UDim2.new(1, 0, 0, 0)
                        library.flags[flag] = v
                        callback(v)
                    end)
                end
            end

            function sectionActions:Slider(text, flag, min, max, default, callback)
                local slider = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 50),
                    BackgroundTransparency = 1,
                    ZIndex = 6,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 20),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 180, 180),
                    TextSize = 13,
                    Font = Enum.Font.GothamBold,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 7,
                    Parent = slider
                })
                local bg = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 10),
                    Position = UDim2.new(0, 0, 0, 25),
                    BackgroundColor3 = Color3.fromRGB(20, 20, 25),
                    BorderSizePixel = 0,
                    Text = "",
                    ZIndex = 7,
                    Parent = slider
                })
                utility.round(bg, 5)

                local fill = utility.create("Frame", {
                    Size = UDim2.new((default - min) / (max - min), 0, 1, 0),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    ZIndex = 8,
                    Parent = bg
                })
                utility.round(fill, 5)

                -- Rainbow/Cool Gradient for Slider
                local sliderGrad = utility.create("UIGradient", {
                    Rotation = 90,
                    Color = ColorSequence.new({
                        ColorSequenceKeypoint.new(0, Color3.fromRGB(50, 0, 100)),
                        ColorSequenceKeypoint.new(1, Color3.fromRGB(220, 0, 255))
                    }),
                    Parent = fill
                })

                local val = utility.create("TextLabel", {
                    Size = UDim2.new(0, 50, 0, 20),
                    Position = UDim2.new(1, -60, 0, 0),
                    BackgroundTransparency = 1,
                    Text = string.format("%.1f", default),
                    TextColor3 = library.accent,
                    TextSize = 13,
                    Font = Enum.Font.GothamBold,
                    ZIndex = 9,
                    Parent = slider
                })

                local function update(input)
                    local perc = math.clamp((input.Position.X - bg.AbsolutePosition.X) / bg.AbsoluteSize.X, 0, 1)
                    local rawValue = min + (max - min) * perc
                    local value = tonumber(string.format("%.1f", rawValue))
                    utility.tween(fill, {0.1}, {Size = UDim2.new(perc, 0, 1, 0)})
                    val.Text = string.format("%.1f", value)
                    library.flags[flag] = value
                    callback(value)
                end

                local dragging = false
                bg.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 then
                        dragging = true
                        update(input)
                    end
                end)
                services.UserInputService.InputChanged:Connect(function(input)
                    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                        update(input)
                    end
                end)
                services.UserInputService.InputEnded:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
                end)
            end

            function sectionActions:Button(text, callback)
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 30),
                    BackgroundColor3 = Color3.fromRGB(35, 35, 40),
                    BorderSizePixel = 0,
                    Text = text,
                    TextColor3 = Color3.fromRGB(255, 255, 255),
                    TextSize = 15,
                    Font = Enum.Font.GothamBold,
                    ZIndex = 6,
                    Parent = items
                })
                utility.round(btn, 6)
                utility.stroke(btn, Color3.fromRGB(60, 60, 70), 1)

                -- Hover Glow Effect
                btn.MouseEnter:Connect(function()
                    utility.tween(btn, {0.3}, {BackgroundColor3 = library.accent, TextColor3 = Color3.fromRGB(255,255,255)})
                end)
                btn.MouseLeave:Connect(function()
                    utility.tween(btn, {0.3}, {BackgroundColor3 = Color3.fromRGB(35, 35, 40), TextColor3 = Color3.fromRGB(255,255,255)})
                end)

                btn.MouseButton1Click:Connect(callback)
            end

            return sectionActions
        end

        return tabActions
    end

    -- Global Search Logic
    searchBox:GetPropertyChangedSignal("Text"):Connect(function()
        local query = string.lower(searchBox.Text)
        if currentTab and currentTab.LeftCol and currentTab.RightCol then
            local cols = { currentTab.LeftCol, currentTab.RightCol }
            for _, col in ipairs(cols) do
                for _, child in ipairs(col:GetChildren()) do
                    if child.Name == "ZalSection" then
                        local title = child:FindFirstChildWhichIsA("TextLabel")
                        if title then
                            local match = (query == "") or string.find(string.lower(title.Text), query, 1, true)
                            child.Visible = match
                        end
                    end
                end
                col.CanvasPosition = Vector2.new(0, 0)
            end
            task.delay(0.05, function()
                if currentTab.LeftCol then
                    local leftList = currentTab.LeftCol:FindFirstChild("UIListLayout")
                    if leftList then currentTab.LeftCol.CanvasSize = UDim2.new(0, 0, 0, leftList.AbsoluteContentSize.Y + 20) end
                end
                if currentTab.RightCol then
                    local rightList = currentTab.RightCol:FindFirstChild("UIListLayout")
                    if rightList then currentTab.RightCol.CanvasSize = UDim2.new(0, 0, 0, rightList.AbsoluteContentSize.Y + 20) end
                end
            end)
        end
    end)

    return windowActions
end

return library
