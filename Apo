            FillDirection = Enum.FillDirection.Vertical,
            HorizontalAlignment = Enum.HorizontalAlignment.Left,
            SortOrder = Enum.SortOrder.LayoutOrder,
            Padding = UDim.new(0, 12),
            Parent = rightCol
        })

        local function updateCanvas()
            leftCol.CanvasSize = UDim2.new(0, 0, 0, leftList.AbsoluteContentSize.Y + 20)
            rightCol.CanvasSize = UDim2.new(0, 0, 0, rightList.AbsoluteContentSize.Y + 20)
        end
        leftList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(updateCanvas)
        rightList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(updateCanvas)

        local function select()
            if currentTab then
                currentTab.Frame.Visible = false
                utility.tween(currentTab.Btn, {0.3}, {TextColor3 = Color3.fromRGB(120, 120, 120)})
                utility.tween(currentTab.Line, {0.3}, {BackgroundTransparency = 1, Size = UDim2.new(1,0,0,4)})
            end
            tabFrame.Visible = true
            leftCol.Visible = true; rightCol.Visible = true
            leftCol.CanvasPosition = Vector2.new(0, 0); rightCol.CanvasPosition = Vector2.new(0, 0)
            updateCanvas()

            utility.tween(tabBtn, {0.3}, {TextColor3 = library.accent})
            utility.tween(underline, {0.3}, {BackgroundTransparency = 0, Size = UDim2.new(1,0,0,4)})

            currentTab = { Frame = tabFrame, Btn = tabBtn, Line = underline, LeftCol = leftCol, RightCol = rightCol }
        end

        tabBtn.MouseButton1Click:Connect(select)
        if not currentTab then select() end

        local tabActions = {}
        local currentSectionIndex = 0

        function tabActions:Section(sectionName)
            local targetCol = currentSectionIndex % 2 == 0 and leftCol or rightCol
            currentSectionIndex = currentSectionIndex + 1

            local sectionFrame = utility.create("Frame", {
                Name = "ZalSection",
                BackgroundColor3 = Color3.fromRGB(25, 25, 30),
                BorderSizePixel = 0,
                AutomaticSize = Enum.AutomaticSize.Y,
                Size = UDim2.new(1, 0, 0, 0),
                ZIndex = 4,
                Parent = targetCol
            })
            utility.round(sectionFrame, 8)
            utility.stroke(sectionFrame, Color3.fromRGB(40, 40, 50), 1)

            utility.create("TextLabel", {
                Size = UDim2.new(1, -15, 0, 35),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                Text = sectionName:upper(),
                TextColor3 = library.accent,
                TextSize = 14,
                Font = Enum.Font.GothamBold,
                TextXAlignment = Enum.TextXAlignment.Left,
                ZIndex = 5,
                Parent = sectionFrame
            })

            local items = utility.create("Frame", {
                Size = UDim2.new(1, -15, 0, 0),
                Position = UDim2.new(0, 10, 0, 35),
                BackgroundTransparency = 1,
                AutomaticSize = Enum.AutomaticSize.Y,
                ZIndex = 5,
                Parent = sectionFrame
            })
            utility.create("UIPadding", { PaddingBottom = UDim.new(0, 10), Parent = items })
