                local toggle = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 32),
                    BackgroundTransparency = 1,
                    Text = "",
                    ZIndex = 8,
                    Parent = items
                })
                
                local box = utility.create("Frame", {
                    Size = UDim2.new(0, 18, 0, 18),
                    Position = UDim2.new(0, 12, 0.5, -9),
                    BackgroundColor3 = Color3.fromRGB(12, 5, 18),
                    BorderSizePixel = 0,
                    ZIndex = 9,
                    Parent = toggle
                })
                utility.round(box, 4)
                utility.stroke(box, Color3.fromRGB(60, 30, 90), 1)

                local fill = utility.create("Frame", {
                    Size = UDim2.new(0, 0, 0, 0), -- Start empty for animation
                    Position = UDim2.new(0.5, 0, 0.5, 0),
                    AnchorPoint = Vector2.new(0.5, 0.5),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    ZIndex = 10,
                    Parent = box
                })
                utility.round(fill, 2)

                utility.create("TextLabel", {
                    Size = UDim2.new(1, -45, 1, 0),
                    Position = UDim2.new(0, 42, 0, 0),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(220, 210, 240),
                    TextSize = 14,
                    Font = Enum.Font.Gotham,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 9,
                    Parent = toggle
                })

                local enabled = false
                toggle.MouseButton1Click:Connect(function()
                    enabled = not enabled
                    if enabled then
                        utility.tween(fill, {0.3, Enum.EasingStyle.Back}, {Size = UDim2.new(1, -4, 1, -4)})
                        utility.tween(box, {0.3}, {BackgroundColor3 = Color3.fromRGB(30, 10, 50)})
                    else
                        utility.tween(fill, {0.2}, {Size = UDim2.new(0, 0, 0, 0)})
                        utility.tween(box, {0.3}, {BackgroundColor3 = Color3.fromRGB(12, 5, 18)})
                    end
                    library.flags[flag] = enabled
                    callback(enabled)
                end)
            end

            function sectionActions:Textbox(text, flag, placeholder, callback)
                local textboxFrame = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 60),
                    BackgroundTransparency = 1,
                    ZIndex = 8,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 20),
                    Position = UDim2.new(0, 12, 0, 0),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 170, 200),
                    TextSize = 13,
                    Font = Enum.Font.Gotham,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 9,
                    Parent = textboxFrame
                })
                local box = utility.create("TextBox", {
                    Size = UDim2.new(1, -24, 0, 28),
                    Position = UDim2.new(0, 12, 0, 22),
                    BackgroundColor3 = Color3.fromRGB(18, 8, 28),
                    BorderSizePixel = 0,
                    PlaceholderText = placeholder or "...",
                    Text = "",
