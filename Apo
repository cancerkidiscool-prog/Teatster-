            toggleBtn.Text = "CLOSED"
            toggleBtn.TextColor3 = Color3.fromRGB(100, 80, 120)
            tStroke.Color = Color3.fromRGB(60, 40, 80)
            tStroke.Thickness = 1
        end
    end

