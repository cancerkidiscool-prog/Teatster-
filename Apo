    toggleBtn.Name = "ToggleBtn"
    toggleBtn.Size = UDim2.new(0, 140, 0, 40)
    toggleBtn.Position = UDim2.new(0, 20, 0, 10)
    toggleBtn.BackgroundColor3 = Color3.fromRGB(15, 5, 20)
