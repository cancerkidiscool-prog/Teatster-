                    Size = UDim2.new(0, 18, 0, 18),
                    Position = UDim2.new(0, 0, 0.5, -9),
                    BackgroundColor3 = Color3.fromRGB(15, 8, 22),
                    BorderSizePixel = 0,
                    ZIndex = 8,
                    Parent = toggle
                })
                utility.round(box, UDim.new(0, 4))
                utility.stroke(box, Color3.fromRGB(70, 30, 100), 1)

                local fill = utility.create("Frame", {
                    Size = UDim2.new(1, -4, 1, -4),
                    Position = UDim2.new(0, 2, 0, 2),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    BackgroundTransparency = 1,
                    ZIndex = 9,
                    Parent = box
                })
                utility.round(fill, UDim.new(0, 2))

                utility.create("TextLabel", {
                    Size = UDim2.new(1, -30, 1, 0),
                    Position = UDim2.new(0, 30, 0, 0),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(210, 200, 230),
                    TextSize = 14,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 8,
                    Parent = toggle
                })

                local enabled = false
                
                -- Hover Effect
                toggle.MouseEnter:Connect(function()
                    if not enabled then utility.tween(box, {0.2}, {BackgroundColor3 = Color3.fromRGB(25, 12, 35)}) end
                end)
                toggle.MouseLeave:Connect(function()
                    if not enabled then utility.tween(box, {0.2}, {BackgroundColor3 = Color3.fromRGB(15, 8, 22)}) end
                end)

                toggle.MouseButton1Click:Connect(function()
                    enabled = not enabled
                    utility.tween(fill, { 0.2 }, { BackgroundTransparency = enabled and 0 or 1 })
                    if enabled then box.BackgroundColor3 = Color3.fromRGB(15, 8, 22) end
                    library.flags[flag] = enabled
                    callback(enabled)
                end)
            end

            function sectionActions:Textbox(text, flag, placeholder, callback)
                local textboxFrame = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 50),
                    BackgroundTransparency = 1,
                    ZIndex = 7,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 20),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(210, 200, 230),
                    TextSize = 14,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 8,
                    Parent = textboxFrame
                })
                local box = utility.create("TextBox", {
                    Size = UDim2.new(1, 0, 0, 24),
                    Position = UDim2.new(0, 0, 0, 22),
                    BackgroundColor3 = Color3.fromRGB(15, 8, 22),
                    BorderSizePixel = 0,
                    PlaceholderText = placeholder or "...",
                    Text = "",
                    TextColor3 = Color3.fromRGB(240, 230, 255),
                    PlaceholderColor3 = Color3.fromRGB(100, 70, 130),
                    TextSize = 14,
                    Font = Enum.Font.Code,
                    ZIndex = 8,
                    Parent = textboxFrame
                })
                utility.round(box, UDim.new(0, 4))
                utility.stroke(box, Color3.fromRGB(70, 30, 100), 1)
                
