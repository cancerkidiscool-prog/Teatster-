                    PlaceholderColor3 = Color3.fromRGB(80, 60, 110),
                    TextSize = 14,
                    Font = Enum.Font.Gotham,
                    ZIndex = 9,
                    Parent = textboxFrame
                })
                utility.round(box, 5)
                utility.stroke(box, Color3.fromRGB(60, 30, 90), 1)
                
                box.Focused:Connect(function() utility.stroke(box, library.accent, 1.2) end)
                box.FocusLost:Connect(function() utility.stroke(box, Color3.fromRGB(60, 30, 90), 1) end)

                box.FocusLost:Connect(function()
                    library.flags[flag] = box.Text
                    callback(box.Text)
                end)
            end

            function sectionActions:Dropdown(text, flag, list, callback)
                local dropdown = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 50),
                    BackgroundTransparency = 1,
                    ZIndex = 8,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 20),
                    Position = UDim2.new(0, 12, 0, 0),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 170, 200),
                    TextSize = 13,
                    Font = Enum.Font.Gotham,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 9,
                    Parent = dropdown
                })
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, -24, 0, 28),
                    Position = UDim2.new(0, 12, 0, 22),
                    BackgroundColor3 = Color3.fromRGB(18, 8, 28),
                    BorderSizePixel = 0,
                    Text = "Select...",
                    TextColor3 = Color3.fromRGB(220, 210, 240),
                    TextSize = 14,
                    Font = Enum.Font.Gotham,
                    ZIndex = 9,
                    Parent = dropdown
                })
                utility.round(btn, 5)
                utility.stroke(btn, Color3.fromRGB(60, 30, 90), 1)

                local contentHeight = #list * 28
                local listFrame = utility.create("ScrollingFrame", {
                    Size = UDim2.new(1, -24, 0, contentHeight),
                    Position = UDim2.new(0, 12, 0, 52),
                    BackgroundColor3 = Color3.fromRGB(18, 8, 28),
                    BorderSizePixel = 0,
                    Visible = false,
                    ZIndex = 11,
                    ScrollBarThickness = 3,
                    ScrollBarImageColor3 = library.accent,
                    CanvasSize = UDim2.new(0, 0, 0, contentHeight),
                    Parent = dropdown
                })
                utility.round(listFrame, 5)
                utility.stroke(listFrame, Color3.fromRGB(60, 30, 90), 1)
                utility.create("UIListLayout", { Padding = UDim.new(0, 0), Parent = listFrame })

                local opened = false
                btn.MouseButton1Click:Connect(function()
                    opened = not opened
                    listFrame.Visible = opened
                    if opened then
                        -- Animate container height change (simulated)
                        dropdown.Size = UDim2.new(1, 0, 0, 50 + math.min(contentHeight, 150))
                        listFrame.Size = UDim2.new(1, -24, 0, math.min(contentHeight, 150))
                        listFrame.CanvasSize = UDim2.new(0,0, 0, contentHeight)
                    else
                        utility.tween(dropdown, {0.2}, {Size = UDim2.new(1, 0, 0, 50)})
                        task.wait(0.2) -- wait for tween
                        listFrame.Visible = false
                    end
                end)

                for _, v in next, list do
                    local item = utility.create("TextButton", {
                        Size = UDim2.new(1, 0, 0, 28),
                        BackgroundColor3 = Color3.fromRGB(18, 8, 28),
                        BorderSizePixel = 0,
                        Text = v,
                        TextColor3 = Color3.fromRGB(200, 190, 220),
                        TextSize = 13,
                        Font = Enum.Font.Gotham,
                        ZIndex = 12,
                        Parent = listFrame
                    })
                    item.MouseButton1Click:Connect(function()
                        btn.Text = v
                        opened = false
                        utility.tween(dropdown, {0.2}, {Size = UDim2.new(1, 0, 0, 50)})
                        task.wait(0.2)
                        listFrame.Visible = false
                        library.flags[flag] = v
                        callback(v)
                    end)
                    item.MouseEnter:Connect(function() item.BackgroundColor3 = Color3.fromRGB(30, 15, 50) end)
                    item.MouseLeave:Connect(function() item.BackgroundColor3 = Color3.fromRGB(18, 8, 28) end)
                end
            end

            function sectionActions:Slider(text, flag, min, max, default, callback)
                local slider = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 50),
                    BackgroundTransparency = 1,
                    ZIndex = 8,
                    Parent = items
                })
                utility.create("TextLabel", {
                    Size = UDim2.new(1, -12, 0, 20),
                    Position = UDim2.new(0, 12, 0, 0),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(200, 190, 220),
                    TextSize = 13,
                    Font = Enum.Font.Gotham,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 9,
                    Parent = slider
                })
                local bg = utility.create("TextButton", {
                    Size = UDim2.new(1, -24, 0, 16),
                    Position = UDim2.new(0, 12, 0, 24),
                    BackgroundColor3 = Color3.fromRGB(18, 8, 28),
                    BorderSizePixel = 0,
                    Text = "",
                    ZIndex = 9,
                    Parent = slider
                })
                utility.round(bg, 8)
                utility.stroke(bg, Color3.fromRGB(60, 30, 90), 1)

                local fill = utility.create("Frame", {
                    Size = UDim2.new((default - min) / (max - min), 0, 1, 0),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    ZIndex = 10,
                    Parent = bg
                })
                utility.round(fill, 8)
                
                -- Gradient on Fill
                local fillGrad = utility.create("UIGradient", {
                    Color = utility.gradient({Color3.fromRGB(80, 0, 160), Color3.fromRGB(200, 120, 255)}),
                    Parent = fill
                })

                -- Premium Slider Thumb (Knob)
                local thumb = utility.create("Frame", {
                    Size = UDim2.new(0, 16, 0, 16),
                    Position = UDim2.new(1, -8, 0.5, -8), -- Anchored to right of fill
                    BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                    BorderSizePixel = 0,
                    ZIndex = 11,
                    Parent = fill
                })
                utility.round(thumb, 8)
                utility.stroke(thumb, library.accent, 2)

                local val = utility.create("TextLabel", {
                    Size = UDim2.new(0, 40, 1, 0),
                    Position = UDim2.new(1, 10, 0, 0),
                    BackgroundTransparency = 1,
                    Text = string.format("%.0f", default),
                    TextColor3 = library.accent,
                    TextSize = 14,
                    Font = Enum.Font.GothamBold,
                    TextXAlignment = Enum.TextXAlignment.Center,
                    ZIndex = 9,
                    Parent = slider
                })

                local function update(input)
                    local sizeX = math.clamp((input.Position.X - bg.AbsolutePosition.X) / bg.AbsoluteSize.X, 0, 1)
                    local rawValue = min + (max - min) * sizeX
                    local value = tonumber(string.format("%.2f", rawValue))
                    
                    utility.tween(fill, {0.1}, {Size = UDim2.new(sizeX, 0, 1, 0)})
                    val.Text = string.format("%.0f", value)
                    library.flags[flag] = value
                    callback(value)
                end

                local dragging = false
                bg.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 then
                        dragging = true
                        update(input)
                    end
                end)
                services.UserInputService.InputChanged:Connect(function(input)
                    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                        update(input)
                    end
                end)
                services.UserInputService.InputEnded:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
                end)
            end

            function sectionActions:Button(text, callback)
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, -24, 0, 32),
                    Position = UDim2.new(0, 12, 0, 0),
                    BackgroundColor3 = Color3.fromRGB(20, 10, 32),
                    BorderSizePixel = 0,
                    Text = text,
                    TextColor3 = Color3.fromRGB(220, 210, 240),
                    TextSize = 14,
                    Font = Enum.Font.GothamBold,
                    ZIndex = 8,
                    Parent = items
                })
                utility.round(btn, 6)
                utility.stroke(btn, Color3.fromRGB(60, 30, 90), 1)

                btn.MouseEnter:Connect(function()
                    utility.tween(btn, {0.2}, {BackgroundColor3 = Color3.fromRGB(30, 15, 50)})
                    utility.stroke(btn, library.accent, 1.2)
                end)
                btn.MouseLeave:Connect(function()
                    utility.tween(btn, {0.2}, {BackgroundColor3 = Color3.fromRGB(20, 10, 32)})
                    utility.stroke(btn, Color3.fromRGB(60, 30, 90), 1)
                end)
                
                btn.MouseButton1Click:Connect(function()
                    utility.tween(btn, {0.1}, {Size = UDim2.new(1, -24, 0, 28)})
                    wait(0.1)
                    utility.tween(btn, {0.1}, {Size = UDim2.new(1, -24, 0, 32)})
                    callback()
                end)
            end

            return sectionActions
        end

        return tabActions
    end

    -- GLOBAL SEARCH LOGIC
    searchBox:GetPropertyChangedSignal("Text"):Connect(function()
        local query = string.lower(searchBox.Text)
        if currentTab and currentTab.LeftCol and currentTab.RightCol then
            local cols = { currentTab.LeftCol, currentTab.RightCol }
            for _, col in ipairs(cols) do
                for _, child in ipairs(col:GetChildren()) do
                    if child.Name == "ZalSection" then
                        local title = child:FindFirstChildWhichIsA("TextLabel")
                        if title then
                            local match = (query == "") or string.find(string.lower(title.Text), query, 1, true)
                            child.Visible = match
                        end
                    end
                end
                col.CanvasPosition = Vector2.new(0, 0)
            end
            task.delay(0.05, function()
                if currentTab.LeftCol then currentTab.LeftCol.CanvasSize = UDim2.new(0, 0, 0, currentTab.LeftCol:FindFirstChildOfClass("UIListLayout").AbsoluteContentSize.Y + 20) end
                if currentTab.RightCol then currentTab.RightCol.CanvasSize = UDim2.new(0, 0, 0, currentTab.RightCol:FindFirstChildOfClass("UIListLayout").AbsoluteContentSize.Y + 20) end
            end)
        end
    end)

    return windowActions
end

return library
